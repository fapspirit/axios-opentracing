{
  "name": "axios-opentracing",
  "version": "0.1.3",
  "description": "Axios interceptor which traces your requests",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/fapspirit/axios-opentracing",
  "author": "Fedorov Anton <fapspirit@gmail.com> (https://github.com/fapspirit)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "axios-opentracing",
    "axios",
    "opentracing",
    "tracing"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "lint": "tslint -t msbuild -c tslint.json 'src/**/*.ts'",
    "test": "nyc mocha --require ts-node/register --require source-map-support/register tests/**/*.spec.ts",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/moxios": "^0.4.8",
    "axios": "^0.20.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^8.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "moxios": "^0.4.0",
    "nyc": "^15.1.0",
    "opentracing": "^0.14.4",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn run lint --",
      "git add"
    ]
  }
}
